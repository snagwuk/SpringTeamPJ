<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.Member">

	<insert id="insertMember" parameterType="Member">
		insert into aMember
		values
		(#{id},#{password},#{name},now(),#{phone},#{position},
		#{status},#{address},#{account},#{bank})
	</insert>

	 <select id="authenticate" parameterType="String" resultType="Member">
		select * from amember where id=#{id}
	</select>
	
	<select id="getMemberinfo" parameterType="String" resultType="Member">
		select * from amember where id=#{id}
	</select>
	
	
