<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.Member">

	<insert id="insertMember" parameterType="Member">
		insert into aMember
		values
		(#{id},#{password},#{name},now(),#{phone},#{postcode},
		#{address},#{detailAddress},#{extraAddress},#{position},
		#{status},#{account},#{bank})
	</insert>

	 <select id="authenticate" parameterType="String" resultType="Member">
		select * from amember where id=#{id}
	</select>
	
	<select id="selectmember" parameterType="String" resultType="Member">
		select * from amember where id=#{id}
	</select>
	
	<update id="updatemember" parameterType="Member">
		update amember set position=#{position},
		account=#{account},bank=#{bank} where id=#{id}
	</update>
	


</mapper>