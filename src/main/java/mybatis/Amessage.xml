<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.Amessage">

<select id="getunreadMessage" parameterType="String" resultType="int">
		select count(readcount) from message where readcount=0 and toid = #{toid};
	</select>

</mapper>